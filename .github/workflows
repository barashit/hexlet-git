name: Say Hello

on: 
  push:
    branches:
      - main  # или ваша основная ветка

jobs:
  say-hello:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Set up Make
      run: sudo apt-get install make

    - name: Run say-hello
      run: make say-hello

